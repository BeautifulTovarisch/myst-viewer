{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "target": "es2022",
    "isolatedModules": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",

    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "allowUnreachableCode": false
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
